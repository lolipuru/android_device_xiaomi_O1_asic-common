    chown system usb /config/usb_gadget/g1/configs/b.1/function1
    chown system usb /config/usb_gadget/g1/configs/b.1/function2
    chown system usb /config/usb_gadget/g1/configs/b.1/function3
    write /sys/devices/platform/soc/e1ac0000.xr_usb/dynamic_mode 0
