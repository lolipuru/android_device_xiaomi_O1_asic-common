    rm /config/usb_gadget/g1/configs/b.1/function4
    rmdir /config/usb_gadget/g1/functions/ncm.gs6
    write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "acmdiag_adb"
    write /config/usb_gadget/g1/idVendor 0x2717
    write /config/usb_gadget/g1/idProduct 0x50A3
    symlink /config/usb_gadget/g1/functions/acm.gs7 /config/usb_gadget/g1/configs/b.1/function0
    symlink /config/usb_gadget/g1/functions/acm.gs8 /config/usb_gadget/g1/configs/b.1/function1
    symlink /config/usb_gadget/g1/functions/acm.gs9 /config/usb_gadget/g1/configs/b.1/function2
    symlink /config/usb_gadget/g1/functions/acm.gs10 /config/usb_gadget/g1/configs/b.1/function3
    symlink /config/usb_gadget/g1/functions/ffs.adb /config/usb_gadget/g1/configs/b.1/function4
    chown system usb /config/usb_gadget/g1/configs/b.1/function0
    chown system usb /config/usb_gadget/g1/configs/b.1/function1
    chown system usb /config/usb_gadget/g1/configs/b.1/function2
